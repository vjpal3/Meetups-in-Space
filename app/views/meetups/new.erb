<h2>Create a new Meetup</h2>
<% if @error_msgs  %>
  <h4> Failed to create a new meetup </h4>
  <ul>
    <% @error_msgs.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<form action="/meetups" method="post">
  <input type = "hidden" id="creator_id" name="meetup[creator_id]" value="<%= session[:user_id] %>">
  <div>
    <label for="title">Title:</label>
    <input type="text" id="title" name="meetup[title]" value="<%= @meetup.title %>">
  </div>

  <div>
    <label for="category">Category:</label>
    <input type="text" id="category" name="meetup[category]" value="<%= @meetup.category %>">
  </div>

  <div>
    <label for="description">Description:</label>
    <textarea id="description" name="meetup[description]"><%= @meetup.description %></textarea>
  </div>

  <div>
    <label for="location">Location:</label>
    <input type="text" id="location" name="meetup[location]" value="<%= @meetup.location %>">
  </div>

  <div>
    <label for="address">Address:</label>
    <input type="text" id="address" name="meetup[address]" value="<%= @meetup.address %>">
  </div>

  <div>
    <label for="city">City:</label>
    <input type="text" id="city" name="meetup[city]" value="<%= @meetup.city %>">
  </div>

  <div>
    <label for="state">State:</label>
    <input type="text" id="state" name="meetup[state]" value="<%= @meetup.state %>">
  </div>

  <div>
    <label for="zip">Zip:</label>
    <input type="text" id="zip" name="meetup[zip]" value="<%= @meetup.zip %>">
  </div>


  <input type="submit" value="Create New Meetup">
</form>
